{
  "name": "@lygem/ui",
  "type": "module",
  "version": "0.1.0",
  "imports": {
    "#*": ["./src/*", "./src/*.ts", "./src/*.tsx"]
  },
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "lint": "biome lint . --write",
    "format": "biome format .",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit",

    "dev": "concurrently --kill-others \"npm run dev:tsup\" \"npm run dev:storybook\"",
    "dev:tsup": "tsup --watch",
    "dev:storybook": "storybook dev --ci -p 6006",

    "test": "concurrently --kill-others \"npm run vitest\" \"npm run test-storybook\"",
    "test:watch": "concurrently --kill-others \"npm run vitest:watch\" \"npm run test-storybook:watch\"",
    "vitest": "vitest run --coverage",
    "vitest:watch": "vitest watch",
    "test-storybook": "test-storybook",
    "test-storybook:watch": "npm run dev:storybook & test-storybook --watch",

    "build": "tsup",
    "build:storybook": "storybook build"
  },
  "files": ["dist"],
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.4",
    "@lygem/tailwind-config": "0.1.0",
    "@lygem/typescript-config": "0.1.0",
    "@storybook/addon-essentials": "^8.5.3",
    "@storybook/addon-interactions": "^8.5.3",
    "@storybook/addon-onboarding": "^8.5.3",
    "@storybook/blocks": "^8.5.3",
    "@storybook/react": "^8.5.3",
    "@storybook/react-vite": "^8.5.3",
    "@storybook/test": "^8.5.3",
    "@storybook/test-runner": "^0.21.3",
    "@tailwindcss/vite": "^4.0.6",
    "@testing-library/react": "^16.2.0",
    "@turbo/gen": "^2.4.0",
    "@types/node": "^22.13.4",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.0.5",
    "concurrently": "^9.1.2",
    "daisyui": "^5.0.0-beta.6",
    "happy-dom": "^17.0.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "storybook": "^8.5.3",
    "tailwindcss": "^4.0.3",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vitest": "^3.0.5"
  },
  "peerDependencies": {
    "daisyui": "^5.0.0-beta.6",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^4.0.3"
  }
}
