{
  "name": "@lygem/ui",
  "type": "module",
  "version": "0.1.0",
  "imports": {
    "#*": ["./src/*", "./src/*.ts", "./src/*.tsx"]
  },
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "lint": "biome lint . --write",
    "format": "biome format .",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit",
    "dev": "concurrently -k -n \"tsup,storybook\"  \"npm run dev:tsup\" \"npm run dev:storybook\"",
    "dev:tsup": "tsup --watch",
    "dev:storybook": "storybook dev --ci -p 6006",
    "test": "npm run test:vitest && npm run test:storybook",
    "test:vitest": "vitest run --coverage",
    "test:vitest:watch": "vitest watch",
    "test:storybook": "concurrently -k -s first -n \"storybook,test\" \"npx http-server storybook-static --port 9009 --silent\" \"wait-on tcp:9009 && test-storybook\"",
    "test:storybook:watch": "echo \"If test process is not running, check that it is running on port 6006\" && wait-on tcp:6006 && test-storybook --watch",
    "build": "tsup",
    "build:storybook": "storybook build"
  },
  "files": ["dist"],
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.4",
    "@lygem/tailwind-config": "0.1.0",
    "@lygem/typescript-config": "0.1.0",
    "@storybook/addon-essentials": "^8.5.3",
    "@storybook/addon-interactions": "^8.5.3",
    "@storybook/addon-onboarding": "^8.5.3",
    "@storybook/blocks": "^8.5.3",
    "@storybook/react": "^8.5.3",
    "@storybook/react-vite": "^8.5.3",
    "@storybook/test": "^8.5.3",
    "@storybook/test-runner": "^0.21.3",
    "@tailwindcss/vite": "^4.0.6",
    "@testing-library/react": "^16.2.0",
    "@turbo/gen": "^2.4.0",
    "@types/node": "^22.13.4",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.0.5",
    "concurrently": "^9.1.2",
    "daisyui": "^5.0.0-beta.6",
    "happy-dom": "^17.0.2",
    "http-server": "^14.1.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "storybook": "^8.5.3",
    "tailwindcss": "^4.0.3",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vitest": "^3.0.5",
    "wait-on": "^8.0.2"
  },
  "peerDependencies": {
    "daisyui": "^5.0.0-beta.6",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^4.0.3"
  }
}
